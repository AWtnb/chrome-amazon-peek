{
  "manifest_version": 3,
  "name": "Amazon Peek",
  "version": "0.1.0",
  "description": "Peek fullsize Amazon search result thumbnail item",
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Chrome Amazon Peek"
  },
  "permissions": ["activeTab", "tabs"],
  "content_scripts": [
    {
      "matches": ["https://www.amazon.co.jp/*", "https://www.amazon.com/*"],
      "run_at": "document_idle",
      "js": ["contentScript.js"],
      "css": ["content.css"]
    }
  ]
}
